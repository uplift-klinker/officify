<MudAppBar>
    <MudIconButton Icon="@Icons.Material.Filled.Menu" OnClick="@HandleMenuButtonClick" UserAttributes="@MenuAttributes">
        Officify
    </MudIconButton>
    <MudSpacer />
    <MudText Type="@Typo.body1">Dark Mode: </MudText>
    <MudSwitch T="bool" Value="@IsDarkMode" ValueChanged="@HandleDarkModeToggle"></MudSwitch>
</MudAppBar>

@code {
    [Parameter]
    public bool IsDarkMode { get; set; }
    
    [Parameter]
    public EventCallback OnToggleDrawer { get; set; }
    
    [Parameter]
    public EventCallback<bool> OnToggleDarkMode { get; set; }

    private Dictionary<string, object?> MenuAttributes { get; } = new()
    {
        {"aria-label", "menu"},
        {"role", "button"}
    };

    private async Task HandleMenuButtonClick()
    {
        await OnToggleDrawer.InvokeAsync();
    }

    private async Task HandleDarkModeToggle(bool state)
    {
        await OnToggleDarkMode.InvokeAsync(state);
    }
}