@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <AppBar OnToggleDrawer="@HandleToggleDrawer"/>
    <AppDrawer IsOpen="@IsDrawerOpen" />
    <MainContent>
        @Body
    </MainContent>    
</MudLayout>

@code {
    private bool IsDrawerOpen { get; set; }
    
    private void HandleToggleDrawer()
    {
        IsDrawerOpen = !IsDrawerOpen;
    }

}
